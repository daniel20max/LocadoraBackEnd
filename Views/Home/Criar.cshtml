@model Locacao

<h4>Locacao de Filme</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="alguel" class="control-label"></label>
                <input asp-for="alguel" class="form-control" />
                <span asp-validation-for="alguel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="filmeId" class="control-label"></label>
                <select asp-for="filmeId" class="form-control" asp-items="@ViewBag.listfilmes">
                    <option value="">-- Selecione um Filme --</option>
                </select>
                <span asp-validation-for="filmeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar!" class="btn btn-success" />
                <a asp-action="Aluguel" class="btn btn-primary">Voltar!</a>
            </div>
        </form>
    </div>
</div>