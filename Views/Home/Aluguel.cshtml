@model List<Locacao>
@{
    ViewData["Title"] = "Locacao";
}

<div class="text-center">
    <h1>Lista de Locacoes</h1>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.First().id)</th>
                <th>@Html.DisplayNameFor(Model => Model.First().filme.nome)</th>
                <th>@Html.DisplayNameFor(Model => Model.First().dataHora)</th>
                <th>@Html.DisplayNameFor(Model => Model.First().alguel)</th>
                <th>@Html.DisplayNameFor(Model => Model.First().filme.link)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Locacao l in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => l.id)</td>
                    <td>@Html.DisplayFor(modelItem => l.filme.nome)</td>
                    <td>@Html.DisplayFor(modelItem => l.dataHora)</td>
                    <td>@Html.DisplayFor(modelItem => l.alguel)</td>
                    <td><a asp-action="Pipoca" asp-route-id="@l.id">Assistir</a></td>


                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Criar" class="btn btn-info">Alugar filme</a>
    </div>
</div>
